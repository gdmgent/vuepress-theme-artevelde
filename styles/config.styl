$fontFamilyBody = 'Source Sans Pro', sans-serif
$fontFamilyCode = 'Source Code Pro', monospace

$ahs-orange  = rgb(245, 135, 50)
$ahs-white   = #FFF
$ahs-black   = #000

$ahs-blue   = rgb(0, 165, 217)
$ahs-purple = rgb(126, 87, 197)
$ahs-pink   = rgb(210, 0, 130)
$ahs-green  = rgb(90, 185, 70)
$ahs-red    = rgb(237, 0, 52)

$navbarBgColor      = $ahs-purple
$navbarColor        = alpha($ahs-white, 50%)
$subtleBgColorAlpha = alpha($ahs-black, 5%)
$subtleBgColor      = lighten($ahs-black, 95%)


$borderWidth    = .375rem
$contentClass   = '.theme-default-content'
$contentPadding = 2rem
