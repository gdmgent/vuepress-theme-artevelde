kbd
.keyboard-combination,
.interface-menu
  color #333
  background-color #f7f7f7
  font-family $fontFamilyCode
  font-size 11px
  font-weight bold
  padding .1em .5em

kbd
  text-transform capitalize
  border-color #ccc
  border-radius .25rem
  border-style solid
  border-width .15rem
  border-bottom-width .25rem
  display inline-block
  line-height 1.4
  margin .1em
  position relative
  white-space nowrap
