  &.num
    background-color #444
    border-color #666
    border-bottom-color #333
    color #ddd
  &.-r
    color rgb(240, 70, 37)
  &.-y
    color rgb(250, 199, 16)
  &.-g
    color rgb(143, 209, 79)
  &.-c
    color rgb(18, 205, 212)
  &.-b
    color rgb(45, 155, 240)
  &.-m
    color rgb(218, 0, 99)
  abbr[title]
    cursor help
    text-decoration-style dotted
    text-decoration-color #999
