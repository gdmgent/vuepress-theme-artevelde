kbd
  background-color #f7f7f7
  border-color #ccc
  border-radius .25rem
  border-style solid
  border-width .15rem
  border-bottom-width .25rem
  color #333
  display inline-block
  font-family $fontFamilyCode
  font-size 11px
  font-weight: bold
  line-height 1.4
  margin .1em
  padding .1em .5em
  position relative
  white-space nowrap
  &.keyboard,
  &.menu
    border 1px solid #efefef
    border-radius 0
    box-shadow none
    color#666
  &.keyboard
    background-color rgba(27, 31, 35, .05);
    border none
  &.menu
    kbd
      border none
      border-radius 0
      box-shadow none
  &.num
    background-color #444
    border-color #666
    border-bottom-color #333
    color #ddd
  &.-r
    color rgb(240, 70, 37)
  &.-y
    color rgb(250, 199, 16)
  &.-g
    color rgb(143, 209, 79)
  &.-c
    color rgb(18, 205, 212)
  &.-b
    color rgb(45, 155, 240)
  &.-m
    color rgb(218, 0, 99)
  kbd
    font-size inherit
    font-weight inherit
    padding inherit
  abbr[title]
    cursor help
    text-decoration-style dotted
    text-decoration-color #666
