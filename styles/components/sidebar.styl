.sidebar
  background-color $subtleBgColor
  border-right 1px solid $borderColor
  bottom 0
  box-sizing border-box
  font-size 16px
  left 0
  margin 0
  overflow-y auto
  position fixed
  top $navbarHeight
  width $sidebarWidth
  z-index 10

.sidebar-mask
  display none
  height 100vh
  left 0
  position fixed
  top 0
  width 100vw
  z-index 9

@media print
  .sidebar
    display none